            <HIGHLIGHT3D></HIGHLIGHT3D>

            <!-- Shadow for three-dimensional display elements. -->
            <SHADOW3D></SHADOW3D>
        </COLOR_SCHEMA>
    </SETTINGS>
</TOOLBAR>
